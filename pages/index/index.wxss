
/* 搜索框 */
.container{
  width: 100%;
  height: 100%;
}
 .search{
  width: 100%;
  height: 96rpx;
  background-color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-list{
  width: 90%;
  height: 66rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  background-color: #fff;
  border: 1rpx solid #fff;
  border-radius: 15rpx;
}
.search-img{
  width: 40rpx;
  height: 40rpx;
}
.search-input{
  width: 100%;
  height: 66rpx;
}
.string{
  font-size: 28rpx;
} 
