  width:25%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.boxs{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;

}
.photo{
   width: 60rpx;
   height: 60rpx;
}
.tubiao-size{
  font-size: 30rpx;
}
