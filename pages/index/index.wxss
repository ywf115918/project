/* 轮播 */
.img{
  width:100%;
  height:330rpx;
}
.swiper-tab{
   width:100%;
   border-bottom: 1rpx solid #bbb;
   text-align: center;
   line-height: 80rpx;
   background: #ececec;
}
.swiper-tab-list{
    display: inline-block;
    width:15%;
    font-size: 24rpx;
    color: #101010;
    margin-left:8%;
    margin-right: 8%; 
}
